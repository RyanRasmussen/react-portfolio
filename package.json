{
  "name": "nodejs-react-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate based on article from https://blog.usejournal.com/setting-up-react-webpack-4-babel-7-from-scratch-2019-b771dca2f637. This has been adapted to include reactstrap (bootstrap for React), a component (clock) and load stylesheets via webpack.",
  "main": "index.js",
  "scripts": {
    "start": "node server/app.js",
    "prestart": "npm run build",
    "start:dev": "webpack-dev-server --open --hot --config webpack.dev.js",
    "build": "webpack --config webpack.production.js",
    "predeploy": "npm run build",
    "deploy": "deploy.bat",
    "test": "jest --verbose",
    "test:watch": "jest --watchAll --verbose",
    "test:coverage": "jest --verbose --coverage"
  },
  "keywords": [],
  "author": "Ryan Rasmussen",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.8.0",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "jest": "^24.8.0",
    "moment-timezone": "^0.5.27",
    "node-sass": "^4.13.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.3.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.0.0",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "prop-types": "^15.7.2",
    "react-datepicker": "^2.9.3",
    "react-router-dom": "^5.0.1",
    "reactstrap": "^8.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/spec/config/CSSStub.js"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/spec/config/test-setup.js"
    ]
  }
}
